<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/firstCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:elevation="50dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="12sp"
                android:paddingTop="10sp"
                android:paddingRight="12dp"
                android:paddingBottom="24sp">


                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/drawingCanvasParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/flDrawingContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:padding="1dp"
                        app:layout_constraintBottom_toTopOf="@id/parentConstrain"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:id="@+id/constrainLayout"
                            android:layout_width="match_parent"
                            android:layout_height="1000dp"
                            android:orientation="vertical">

                            <com.edu.happytesting.drawing.CustomScrollView
                                android:id="@+id/scrollView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <com.edu.happytesting.drawing.CustomDrawingView
                                        android:id="@+id/drawing"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:scaleType="fitCenter" />
                                </LinearLayout>

                            </com.edu.happytesting.drawing.CustomScrollView>

                        </LinearLayout>

                    </FrameLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/parentConstrain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/drawingConstrain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/drawingLinear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">


                                <ImageButton
                                    android:id="@+id/brushColor"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:contentDescription="@string/pencil_todo"
                                    android:src="@drawable/pencil"
                                    app:layout_constraintEnd_toStartOf="@id/erase"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageButton
                                    android:id="@+id/erase"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:contentDescription="@string/eraser_todo"
                                    android:src="@drawable/eraser"
                                    app:layout_constraintEnd_toStartOf="@id/multicolor"
                                    app:layout_constraintStart_toEndOf="@id/brushColor"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageButton
                                    android:id="@+id/multicolor"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:contentDescription="@string/multi_color_todo"
                                    android:src="@drawable/color"
                                    app:layout_constraintEnd_toStartOf="@id/btn_undo"
                                    app:layout_constraintStart_toEndOf="@id/erase"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageButton
                                    android:id="@+id/btn_undo"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:contentDescription="@string/undo_button"
                                    android:src="@drawable/undo_select"
                                    app:layout_constraintEnd_toStartOf="@id/btn_redo"
                                    app:layout_constraintStart_toEndOf="@id/multicolor"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageButton
                                    android:id="@+id/btn_redo"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:contentDescription="@string/redo_button"
                                    android:src="@drawable/redo"
                                    app:layout_constraintStart_toEndOf="@id/btn_undo"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/swipeUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="@string/swipe_up_to_add_page"
                            android:textColor="@color/tab_color"
                            android:textSize="19sp"
                            app:layout_constraintEnd_toStartOf="@id/scroll"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/scroll"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:scaleType="centerCrop"
                            app:lottie_autoPlay="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/scrolldown" />

                        <!--                        <ImageView-->
<!--                            android:id="@+id/scroll"-->
<!--                            android:layout_width="30dp"-->
<!--                            android:layout_height="30dp"-->
<!--                            android:layout_marginTop="10sp"-->
<!--                            android:layout_marginEnd="15dp"-->
<!--                            android:src="@drawable/down_arrow"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            app:layout_constraintTop_toTopOf="parent" />-->
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/openChoiceQuestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="10dp">

                        <RadioButton
                            android:id="@+id/question1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:theme="@style/AppRadioAppStyle" />

                        <RadioButton
                            android:id="@+id/question2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:theme="@style/AppRadioAppStyle" />

                        <RadioButton
                            android:id="@+id/question3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:theme="@style/AppRadioAppStyle" />

                        <RadioButton
                            android:id="@+id/question4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:theme="@style/AppRadioAppStyle" />

                    </RadioGroup>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>